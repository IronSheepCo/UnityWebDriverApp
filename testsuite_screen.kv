#:kivy 1.0

#:set height 30

TestSuiteScreen:
    name:"test_suite"

    title_label: title_label
    back_button: back_button
    test_suite_view: test_suite_view
    test_suite_stack: test_suite_stack

    StackLayout:
        
        Button:
            id: back_button
            text:"Back"
            height:height
            size_hint:0.15, None
            on_release:root.Back()

        Label:
            id:title_label
            height:height
            size_hint:0.7, None
        

        TestSuiteView:

            test_suite_name: test_suite_name
            test_suite_stack: test_suite_stack

            id:test_suite_view
            size_hint:1, 0.9

            Label:
                id:test_suite_name
                text:"Current Test Suite"
                height:height
                size_hint:1, None
        
            BoxLayout:
                size_hint:1, 1
                orientation:'vertical'

                BoxLayout:
                    orientation:'horizontal'
                    height:height
                    size_hint:0.75, None

                    Button:
                        text:'Load test suite'
                        on_release:test_suite_view.load_test_suite_pressed(self)
                        
                    Button:
                        text:'Save test suite'
                        on_release:test_suite_view.save_test_suite_pressed(self)

                    Button:
                        text:'+ Add test case'
                        on_release:test_suite_view.add_test_suite_step()
                    
                    Button:
                        text:'Run'
                        on_release:test_suite_view.run_test_suite(self)
                
                    Button:
                        text:'Clear'
                        on_release:test_suite_view.clear()

                ScrollView:
                    size_hint:1, 1
                    StackLayout:
                        hide_root: True
                        size_hint: 0.95, None
                        id:test_suite_stack
                        height:self.minimum_height