#:kivy 1.0

#:set height 30

ElementsScreen:
    
    name:"elements"
    
    label: label
    xpath_query: xpath_query
    query_response: query_response
    text_uuid: text_uuid  
    extra_param: extra_param 
    response_area: response_area
    test_case_view: test_case_view
 
    StackLayout:
        
        Label:
            id:label
            height:height
            size_hint:1, None

        Button:
            id:disconnect
            text:"Disconnect"
            height:height
            size_hint:0.15, None
            on_release:root.disconnect_from_app(self)

        Label:
            text:"XPath query"
            height:height
            size_hint:0.2, None        

        Button:
            id:clear_query_button
            text:"Clear query"
            height:height
            size_hint:0.15, None
            on_release:root.run_clear_query_callback(self)
                    
        TextInput:
            id:xpath_query
            text:"//uibutton"
            multiline:False
            height:height
            size_hint:0.5, None

        Button:
            id:query_button
            text:"Run query"
            height:height
            size_hint:1, None
            on_release:root.run_query_callback(self)
       
        ScrollView:
            size_hint:0.4, 0.5
            
            TreeView:
                id:query_response
                size_hint:1, None
                root_options: {'text':'Result'}

        TestCaseView:

            test_case_name: test_case_name

            id:test_case_view
            test_case_stack:test_case_stack
            size_hint:0.6, 0

            Label:
                id:test_case_name
                text:"Current test case"
                height:height
                size_hint:0.75, None

            Button:
                text:'Show Test List'
                on_release:root.show_test_list()
                height:height
                size_hint:0.25, None

            BoxLayout:
                size_hint:1, 1
                orientation:'vertical'

                BoxLayout:
                    orientation:'horizontal'
                    height:height
                    size_hint:1, None

                    Button:
                        text:'Load test'
                        on_release:test_case_view.load_test_pressed(self)
                        
                    Button:
                        text:'Save test'
                        on_release:test_case_view.save_test_pressed(self)

                    Button:
                        text:'+ Add step'
                        on_release:test_case_view.add_step(self)
                    
                    Button:
                        text:'Run'
                        on_release:test_case_view.run_test_case(self)
                
                    Button:
                        text:'Clear'
                        on_release:test_case_view.clear()

                ScrollView:
                    size_hint:1, 1
                    StackLayout:
                        hide_root: True
                        size_hint: 0.95, None
                        id:test_case_stack
                        height:self.minimum_height

                        
        Label:
            text:"Test zone"
            height:height
            size_hint:1, None
           
        Label:
            text:"UUID"
            height:height
            size_hint:0.1, None
            halign:"left"
            valign:"middle"

        TextInput:
            id:text_uuid
            height:height
            multiline:False
            size_hint:0.4, None

        Button:
            text:"Click"
            height:height
            size_hint:0.15, None
            on_release:root.pressed_click(self)

        Button:
            text:"Attribute"
            height:height
            size_hint:0.15, None
            on_release:root.pressed_attribute(self)

        Button:
            text:"Send keys"
            height:height
            size_hint:0.15, None
            on_release:root.pressed_send_keys(self)

        Label:
            text:"Extra param"
            height:height
            size_hint:0.1, None
            halign:"left"
            valign:"middle"

        TextInput:
            id:extra_param
            height:height
            size_hint:0.4, None

        Button:
            text:"Name"
            height:height
            size_hint:0.15, None
            on_release:root.pressed_get_name(self)

        Button:
            text:"Text"
            height:height
            size_hint:0.15, None
            on_release:root.pressed_get_text(self)

        Button:
            text:"Highlight"
            height:height
            size_hint:0.15, None
            on_release:root.pressed_highlight(self)

        Label:
            text:"Response"
            height:height
            size_hint:1, None
        
        TextInput:
            id:response_area
            height:2*height
            size_hint:1, None

<LoadDialog>:
    filechooser:filechooser
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            filters:['*.tc']

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            filters:['*.tc']
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)

<ConfirmPopup>:
    GridLayout:
		cols: 1
		padding: '12dp'
		pos_hint: {'center': (0.5, 0.5)}
		size_hint_x: 0.66
		size_hint_y: None
		height: self.minimum_height
			
		Label:
			text: root.text
			size_hint_y: None
			height: 4*height
			halign: 'center'
		
		BoxLayout:
			size_hint_y: None
			height: height
			
			Button:
				text: root.cancel_text
				on_press: root.cancel()
			Button:
				text: root.ok_text
				on_press: root.ok()
