#:kivy 1.0

#:set height 30

ConnectEntry:
    height:4*height
    size_hint:1, None

    target_ip:target_ip
    target_port:target_port
    target_name:target_name
    target_device_id:target_device_id
    connect_button:connect_button

    BoxLayout:
        orientation:"horizontal"
        size_hint:1,None

        BoxLayout:
            orientation:"vertical"
            size_hint:0.85, None

            BoxLayout:
                orientation:"horizontal"

                Label: 
                    text:"Device Ip: "
                    height:height
                    size_hint:0.5, None
                Label:
                    id: target_ip
                    text:""
                    height:height
                    size_hint: 0.5, None

            BoxLayout:
                orientation:"horizontal"

                Label:
                    text:"Port: "
                    height:height
                    size_hint:0.5, None
                Label:
                    id: target_port
                    text:""
                    height: height
                    size_hint: 0.5, None

            BoxLayout:
                orientation:"horizontal"
                
                Label:
                    text:"Name: "
                    height:height
                    size_hint:0.5, None
                Label:
                    id: target_name
                    text:""
                    height: height
                    size_hint: 0.5, None

            BoxLayout:
                orientation:"horizontal"

                Label:
                    text:"ID: "
                    height:height
                    size_hint:0.5, None
                Label:
                    id: target_device_id
                    text:""
                    height: height
                    size_hint: 0.5, None
        Button:
            id:connect_button
            size_hint:0.15, 0.25
            text:"Connect"
            on_release:root.connect_to_server_callback(self)